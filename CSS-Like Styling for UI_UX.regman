style GameUI {
    background-color: #1a1a1a;
    font-size: 14px;
    button {
        background-color: #FF6347;
        border-radius: 5px;
        padding: 10px;
    }
}

component GameScreen {
    render {
        header("Welcome to the Game!");
        button("Start", action = start_game);
    }
}

ui_style {
    element (button#submit) {
        background_color: "#3498db";
        font_size: "16px";
        padding: "10px 20px";
        hover {
            background_color: "#2980b9";
        }
    }

    layout {
        display: "flex";
        flex_direction: "row";
        align_items: "center";
    }
}
